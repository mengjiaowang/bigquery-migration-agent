# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Google Cloud Configuration
# Optional: Override if different from ADC
# GOOGLE_CLOUD_PROJECT=your_gcp_project_id
# GOOGLE_CLOUD_LOCATION=global

# Model Configuration
# Specify the Gemini model for each agent node
SQL_CONVERT_MODEL=gemini-3-pro-preview
LLM_SQL_CHECK_MODEL=gemini-3-pro-preview
BIGQUERY_ERROR_FIX_MODEL=gemini-3-pro-preview

# SQL Chunking Configuration
# Options: auto, always, disabled
SQL_CHUNKING_MODE=auto
MAX_SQL_LENGTH=8000
MAX_SQL_LINES=200

# Auto-Fix Configuration
# Maximum attempts to fix SQL errors
AUTO_FIX_MAX_RETRIES=10

# Data Verification Configuration
# Options: row_count, full_content
DATA_VERIFICATION_MODE=row_count
# Target dataset allowed for verification (safety check)
DATA_VERIFICATION_ALLOWED_DATASET=project.dataset
